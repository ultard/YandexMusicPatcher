<Window x:Class="YandexMusicPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#343434"
        Foreground="#E0E0E0"
        ResizeMode="CanMinimize"
        Title="YandexMusicPatcher" Height="700" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <ProgressBar x:Name="ProgressBar" Maximum="3" Height="20" Margin="10"/>
            <TextBlock x:Name="ProgressText" Text="" HorizontalAlignment="Center" Style="{StaticResource AppTextBlock}"/>
        </Grid>
        
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="Установить" Click="ButtonInstall_Click" Margin="10, 0"/>
            <Button Grid.Column="1" Content="Удалить мод" Click="ButtonModRemove_Click" Margin="10, 0"/>
        </Grid>
        
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Путь до Яндекс Музыки" Style="{StaticResource HeaderTextBlock}"/>
            <TextBlock Text="Если путь не найден автоматически, укажите его вручную" Style="{StaticResource SubHeaderTextBlock}"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" x:Name="TxtYmPath" IsReadOnly="True"/>
                <Button Grid.Column="1" Margin="10,0,0,0" Content="Обзор" Click="ButtonBrowse_Click" />
                <Button Grid.Column="2" Margin="10,0,0,0" Content="Сбросить" Click="ButtonBrowseClear_Click" />
            </Grid>
        </StackPanel>
        
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Канал релизов" Style="{StaticResource HeaderTextBlock}" Margin="0,0,0,5"/>
            <ComboBox x:Name="ComboBoxReleaseChannel" Grid.Column="1" Height="30" Width="150" SelectionChanged="ComboBoxReleaseChannel_SelectionChanged">
                <ComboBoxItem Content="Полный" />
                <ComboBoxItem Content="Только DevTools" />
            </ComboBox>
        </Grid>
        
        <Grid Grid.Row="5" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Не удалять app.asar после установки" Style="{StaticResource HeaderTextBlock}"/>
                <TextBlock Text="Сохраняет файл и впоследующем использует его если версия остаётся той же" Style="{StaticResource SubHeaderTextBlock}"/>
            </StackPanel>
            
            <CheckBox x:Name="CheckBoxKeepAsar" Grid.Column="1" VerticalAlignment="Center" Checked="CheckBoxKeepAsar_Changed" Unchecked="CheckBoxKeepAsar_Changed"></CheckBox>
        </Grid>
    </Grid>
</Window>
